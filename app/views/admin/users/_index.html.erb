<div class="row">
  <div class='col-md-9 col-md-offset-3'>
    <div id="search" class="search-wide">
      <%= form_tag(admin_users_path, :method => "get", :class => "form-horizontal", :role => "form") do %>
        <div class="input-group">
          <%= search_field_tag :query, params[:query], :placeholder => "Search user", :class => "form-control" %>
          <div class="input-group-btn">
            <button type="submit" class="btn btn-primary hidden-xs">Search</button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <div class='col-md-3'>
    <% if @roles.count > 0 %>
      <div class="panel facets">
        <div class="panel-body">
          <h4>Roles</h4>
          <ul>
            <% if @role %>
              <li class="active">
                <%= link_to icon('check-square-o').html_safe, admin_users_path('beta-tester' => params['beta-tester']) %>
                <div class="facet-title"><%= @role.first.titleize %></div>
                <span class="number pull-right"><%= number_with_delimiter(@role.last) %></span>
                <div class="clearfix"/>
              </li>
            <% else %>
              <% @roles.each do |role| %>
                <li>
                  <%= link_to icon('square-o').html_safe, admin_users_path('role-id' => role.first, 'beta-tester' => params['beta-tester']) %>
                  <div class="facet-title"><%= role.first.titleize %></div>
                  <span class="number pull-right"><%= number_with_delimiter(role.last) %></span>
                  <div class="clearfix"/>
                </li>
              <% end %>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
    <% if @groups.count > 0 %>
      <div class="panel facets">
        <div class="panel-body">
          <h4>Groups</h4>
          <ul>
            <% if @group %>
              <li class="active">
                <%= link_to icon('check-square-o').html_safe, admin_users_path('role-id' => params['role-id']) %>
                <div class="facet-title">Beta Testers</div>
                <span class="number pull-right"><%= number_with_delimiter(@group.count) %></span>
                <div class="clearfix"/>
              </li>
            <% else %>
              <li class="active">
                <%= link_to icon('square-o').html_safe, admin_users_path('role-id' => params['role-id'], 'beta-tester' => true) %>
                <div class="facet-title">Beta Testers</div>
                <span class="number pull-right"><%= number_with_delimiter(@groups.count) %></span>
                <div class="clearfix"/>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
  <div class='col-md-9 panel-list'>
    <% if @users.size > 0 %>
      <% @users.each do |user| %>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">
              <span class='pull-right'><%= user.role_name %></span>
              <%= user.display_name %>
            </h3>
          </div>
          <% if can?(:manage, user) && @user && @user.id == user.id && (controller.action_name == "edit" or (controller.action_name == "update" and !@user.errors.empty?)) %>
            <%= simple_form_for user, url: admin_user_path(user), html: { role: "form", remote: true } do |f| %>
              <div class="panel-body">
                <% if user.id != current_user.id %>
                  <%= f.input :role_id, collection: Role.all[:data], include_blank: false, input_html: { class: "form-user" } %>
                <% end %>

                <div class="form-group">
                  <label for="other">Other</label>
                  <%= f.input :is_public, label: "Record is public", input_html: { class: "form-user" } %>
                  <%= f.input :auto_update, label: "Auto-Update is enabled", input_html: { class: "form-user" } %>
                  <%= f.input :beta_tester, label: "Beta Tester", input_html: { class: "form-user" } %>
                </div>
              </div>
              <div class="panel-footer">
                <div class="form-group pull-right">
                  <%= link_to 'Cancel', admin_users_path(query: params[:query], 'role-id' => params['role-id']), { :remote => true, :class => 'btn btn-sm' } %>
                  <%= f.submit "Save ", class: "btn btn-sm btn-fill" %>
                </div>
                <div class="clearfix"/>
              </div>
            <% end %>
          <% else %>
            <div class="panel-body user-list">
              <% if user.email.present? %>
                <h5>Email</h5>
                <%= link_to h(user.email), "mailto:#{user.email}" %>
              <% elsif user.unconfirmed_email.present? %>
                <h5>Email (unconfirmed)</h5>
                <%= link_to h(user.unconfirmed_email), "mailto:#{user.unconfirmed_email}" %>
              <% end %>

              <h5>ORCID</h5>
              <%= link_to h(user.orcid), user.orcid_as_url %>              

              <h5>Record</h5>
              <% if user.is_public %>
                is public
              <% else %>
                <span class="text-info">is private</span>
              <% end %>

              <h5>Auto-Update</h5>
              <% if user.auto_update %>
                is enabled
              <% else %>
                <span class="text-info">is disabled</span>
              <% end %>

              <% if user.beta_tester %>
                <h5>Beta Tester</h5>
                <%= user.beta_tester %>
              <% end %>

              <h5>Account created</h5>
              <%= l user.created_at, format: :medium %>

              <h5>ORCID Token</h5>
              <% if user.orcid_token.blank? %>
                Missing
              <% elsif user.orcid_expires_at < Time.zone.now %>
                Expired
              <% else %>
                Expires <%= l user.orcid_expires_at, format: :medium %>
              <% end %>

              <h5>Claims</h5>
              <%= link_to_if user.claims.count > 0, pluralize(user.claims.count, "Claim"), admin_claims_path(source: params[:source], state: params[:state], user_id: user.orcid) %>
            </div>
            <% if can?(:manage, user) %>
              <div class="panel-footer">
                <div class="btn-toolbar">
                   <% if can?(:manage, user) && Time.zone.now < user.orcid_expires_at %>
                    <div class="btn-group btn-group-sm pull-right">
                      <%= link_to 'delete token', admin_user_path(user, user: { orcid_token: nil, orcid_expires_at: Time.zone.now }), { method: :put, remote: true, class: 'btn btn-sm btn-warning btn-fill' } %>
                    </div>
                  <% end %>
                  <% if user.uid != current_user.uid && can?(:manage, Phrase) %>
                    <div class="btn-group btn-group-sm pull-right">
                      <%= link_to "Delete".html_safe, admin_user_path(user, query: params[:query], 'role-id' => params['role-id'], page: params[:page]), method: :delete, data: { confirm: 'Are you sure?' }, remote: true, class: 'btn btn-fill btn-sm', id: "#{user.id}-delete" %>
                    </div>
                  <% end %>
                  <div class="btn-group btn-group-sm pull-right">
                    <%= link_to "Update".html_safe, edit_admin_user_path(user, query: params[:query], 'role-id' => params['role-id'], page: params[:page]), remote: true, class: 'btn btn-sm', id: "#{user.id}-edit" %>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      <% end %>

      <div class="text-center">
        <%= paginate @users %>
      </div>
    <% else %>
      <div class="alert alert-warning">
        There are currently no users
        <% unless params['role-id'].blank? %>
            with role "<%= params['role-id'].titleize %>"
        <% end %>
        <% unless params[:query].blank? %>
            with <strong><%= params[:query] %></strong> in the name, email or API key
        <% end %>
      </div>
    <% end %>
  </div>
</div>
