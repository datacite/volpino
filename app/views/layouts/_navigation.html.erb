<div class="navbar subnav hidden-xs" role="navigation">
  <div class="navbar-inner">
    <div class="container-fluid">
      <%= content_tag :h1, @title || controller.controller_name.humanize, data_tags_for_api %>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Status", status_index_path %></li>
        <% if can?(:manage, User) %>
          <li><%= link_to "Users", users_path %></li>
        <% end %>
        <% if can?(:manage, Member) %>
          <li><%= link_to "Members", members_path %></li>
        <% end %>
        <% if can?(:manage, Service) %>
          <li><%= link_to "Services", services_path %></li>
        <% end %>
        <% if can?(:read, Tag) %>
          <li><%= link_to "Tags", tags_path %></li>
        <% end %>
        <% if user_signed_in? %>
          <li><%= link_to "Claims", claims_path %></li>
        <% end %>
        <li class="dropdown hidden-sm hidden-md">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Support <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to 'API Documentation', '/api' %></li>
            <li><%= link_to 'Github Issues', "#{ENV['GITHUB_URL']}/issues" %></li>
          </ul>
        </li>
      </ul>
