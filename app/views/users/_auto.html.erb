<div class="panel <%= auto_update_text %>">
  <div class="panel-heading panel-title">
    ORCID Auto-Update <%= enabled_text.html_safe %>
  </div>
  <div class="panel-body">
    Automatically have works in the <%= link_to 'DataCite Metadata Store', 'http://mds.datacite.org' %> added to your ORCID record.
  </div>
  <div class="panel-footer">
    <div class="btn-toolbar">
      <div class="btn-group btn-group-sm pull-right">
        <% if current_user.auto_update %>
          <%= link_to 'disable'.html_safe, user_path(current_user, :user => { :auto_update => false }), :method => :put, :remote => true, :class => 'btn btn-warning btn-sm', :id => "auto-update" %>
        <% else %>
          <%= link_to 'enable'.html_safe, user_path(current_user, :user => { :auto_update => true }), :method => :put, :remote => true, :class => 'btn btn-success btn-sm', :id => "auto-update" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
