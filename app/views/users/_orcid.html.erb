<div class="panel panel-default">
  <div class="panel-heading panel-title">
    ORCID Search and Link
  </div>
  <div class="panel-body">
    Manually add works you find via <%= link_to 'DataCite Search', 'https://search.datacite.org' %> to your ORCID record.
  </div>
  <div class="panel-footer">
    <div class="btn-toolbar">
      <div class="btn-group btn-group-sm pull-right">
        <%= link_to "search", "#{ENV['SEARCH_URL']}/works?query=#{current_user.names_for_search}", class: 'btn btn-default btn-sm' %>
      </div>
    </div>
  </div>
</div>

<div id="public">
  <%= render :partial => 'users/public' %>
</div>

<div id="auto">
  <%= render :partial => 'users/auto' %>
</div>
