<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading panel-title">
        ORCID Search and Link
      </div>
      <div class="panel-body">
        <%= icon("search", class: "fa-2x fa-pull-left") %>
        <p>Add works you find via DataCite Search to your ORCID record.</p>
        <div class="search-orcid orcid">
          <%= form_tag('/services/search/?origin=', :method => "get", :class => "inline", :role => "form") do %>
            <div class="input-group">
              <%= search_field_tag :q, current_user.names_for_search, :placeholder => "Search", :class => "form-control" %>
              <div class="input-group-btn">
                <button class="btn btn-primary" type="submit"><%= icon("search") %></button>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="panel <%= auto_update_text %>">
      <div class="panel-heading panel-title">
        ORCID Auto-Update <%= enabled_text.html_safe %>
      </div>
      <div class="panel-body">
        <%= icon("exchange", class: "fa-2x fa-pull-left") %>
        <p>Have works with your ORCID identifier automatically added to your ORCID record.</p>
        <div class="btn-toolbar pull-right">
          <div class="btn-group btn-group-sm orcid">
            <% if current_user.auto_update %>
              <%= link_to 'disable'.html_safe, user_path(current_user, :user => { :auto_update => false }), :method => :put, :remote => true, :class => 'btn btn-default btn-sm', :id => "auto-update" %>
            <% else %>
              <%= link_to 'enable'.html_safe, user_path(current_user, :user => { :auto_update => true }), :method => :put, :remote => true, :class => 'btn btn-info btn-sm', :id => "auto-update" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
